{
  "name": "graphql-todo",
  "version": "1.0.50",
  "trustedDependencies": [
    "sqlite3"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "wipe": "rm -rf database/todo.db && rm -rf database/migrations/* && bun migration",
    "migration": "bun drizzle-kit generate:sqlite && bun up && bun push",
    "down": "bun drizzle-kit drop --out database/migrations",
    "up": "bun drizzle-kit up:sqlite",
    "push": "bun drizzle-kit push:sqlite",
    "studio": "bun drizzle-kit studio"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@elysiajs/apollo": "^0.8.0",
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/swagger": "^0.8.5",
    "@graphql-tools/merge": "^9.0.1",
    "@grotto/logysia": "^0.1.1",
    "better-sqlite3": "^9.3.0",
    "drizzle-orm": "^0.29.3",
    "elysia": "latest",
    "elysia-helmet": "^1.0.2",
    "graphql": "^16.8.1",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.8",
    "bun-types": "latest",
    "drizzle-kit": "^0.20.13",
    "@types/better-sqlite3": "^7.6.9"
  },
  "module": "src/index.js"
}
